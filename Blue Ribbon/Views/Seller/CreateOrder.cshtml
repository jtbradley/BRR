
@model Blue_Ribbon.Models.Campaign
@{
    ViewBag.Title = "List Product";
}

@using (Html.BeginForm("ReviewOrder", "Seller"))

{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ASIN)
    @Html.HiddenFor(model => model.RetailPrice)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Category)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.ImageUrl)
    @Html.HiddenFor(model => model.TextGoal)
    @Html.HiddenFor(model => model.PhotoGoal)
    @Html.HiddenFor(model => model.VideoGoal)
    @Html.HiddenFor(model => model.VendorID)


    <div class="create-order">
        <h2 class="text-center">List Item on Blue Ribbons Review!</h2>
        @Html.ActionLink("Cancel Order", "Index", "Seller", null, new { @class = "btn btn-sm btn-default" })
        <hr />

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-sm-12 col-md-6">

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ASIN, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8 asindisplay">
                                @Html.DisplayFor(model => model.ASIN)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.Label("Amazon Price", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8" id="retailprice">
                                $@Html.DisplayFor(model => model.RetailPrice)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.Label("Reviewer Discount", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8" id="discount">
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("Sale Price", htmlAttributes: new { @class = "control-label col-md-4"})
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.SalePrice, null, new { htmlAttributes = new { @class = "form-control", id = "salepricebox", @placeholder = "0.00" } })
                            @Html.ValidationMessageFor(model => model.SalePrice, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    @*<div class="row">
                            <div class="form-group">
                                @Html.Label("Total Discount", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8" id="totalDiscount">
                                </div>
                            </div>
                        </div>*@
                    <hr />

                    <div class="row">

                        <div class="form-group">
                            @Html.Label("Number of Reviews", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8" , id="textQty">
                                @Html.DisplayFor(model => model.TextGoal)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DailyLimit,"Maximum Products per Day", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DailyLimit, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>


                    @*<div class="row">
                            <div class="form-group">
                                @Html.Label("Photo Reviews", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8" , id="photoQty">
                                    @Html.DisplayFor(model => model.PhotoGoal)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                @Html.Label("Video Reviews", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8" , id="videoQty">
                                    @Html.DisplayFor(model => model.VideoGoal)
                                </div>
                            </div>
                        </div>*@

                    <div class="row">
                        <div class="form-group">
                            @Html.Label(String.Format("{0}", (Model.TextGoal + Model.PhotoGoal + Model.VideoGoal)) + " Discount Codes Needed (Paste in Box, One Code per Line)", htmlAttributes: new { @class = "control-label col-md-4", style = "padding-left:20px" })
                            <div class="col-md-8">
                                @Html.TextArea("discountcodes", new { @class = "form-control", style ="margin-top:10px" })
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="form-group">
                            @Html.Label("Custom Purchase URL (optional)", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.VendorsPurchaseURL, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.Label("Custom Purchase Instructions (optional)", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.VendorsPurchaseInstructions, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>


                @*<div class="col-sm-12 col-md-8">

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.VendorsPurchaseURL, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.VendorsPurchaseURL, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.VendorsPurchaseInstructions, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.VendorsPurchaseInstructions, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>*@


                <div class="col-sm-12 col-md-6 ">
                    <h2>Product Details from Amazon.com</h2>
                    <div class="form-group">
                        <dl class="dl-horizontal">

                            <dt>
                                Amazon.com Link
                            </dt>
                            <dd>
                                <a href=@String.Format("http://www.amazon.com/dp/{0}/", Html.DisplayFor(model => model.ASIN)) target="_blank" style="color:#5cb85c; font-size:18px; font-weight: bold">See on Amazon! <span class="glyphicon glyphicon-new-window"></span></a>
                            </dd>
                            <dt>
                                Retail Price
                            </dt>

                            <dd>
                                $@Html.DisplayFor(model => model.RetailPrice)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                                <br>
                            </dd>


                            <dd>
                                <img src=@Model.ImageUrl id="detailpage" />
                            </dd>
                        </dl>
                        <br>

                        <input type="submit" value="Review Order" class="btn btn-primary" style="margin-left:225px; background-color:#5cb85c" />

                    </div>
                </div>
            </div>
        </div>
    </div>
}



